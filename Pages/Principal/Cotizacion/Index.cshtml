@page
@model mecanico_plus.Pages.Principal.Cotizacion.IndexModel
@{
    ViewData["Title"] = "Cotización";
}

<div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-bold mb-4">Generar Cotización</h1>

    <form method="post" asp-page-handler="GenerateCotizacion" class="space-y-6">
        <div>
            <label for="servicio" class="block text-sm font-medium text-gray-900">Servicio</label>
            <div class="mt-2">
                <input id="servicio" name="Servicio" type="text" class="block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
            </div>
        </div>
        <div>
            <label for="valor" class="block text-sm font-medium text-gray-900">Valor</label>
            <div class="mt-2">
                <input id="valor" name="Valor" type="number" step="0.01" class="block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
            </div>
        </div>
        <div>
            <label for="detallesAdicionales" class="block text-sm font-medium text-gray-900">Detalles Adicionales (opcional)</label>
            <div class="mt-2">
                <textarea id="detallesAdicionales" name="DetallesAdicionales" rows="4" class="block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"></textarea>
            </div>
        </div>
        <div>
            <button type="submit" class="w-full bg-orange-500 text-white px-4 py-2 rounded hover:bg-orange-600">Generar Cotización</button>
        </div>
    </form>
</div>
