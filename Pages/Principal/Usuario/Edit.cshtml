@page
@model mecanico_plus.Pages.Principal.Usuario.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 style="margin-bottom: 20px;" class="text-3xl font-bold">Editar</h1>

<h4 style="margin-bottom: 20px;" class="text-xl font-medium">Usuario</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="t001_usuario.f001_rowid" />
            
            <div class="form-group">
                <label asp-for="t001_usuario.f001_id_usuario" class="control-label"></label>
                <input asp-for="t001_usuario.f001_id_usuario" class="form-control" disabled="@Model.IsPatient" />
                <span asp-validation-for="t001_usuario.f001_id_usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="t001_usuario.f001_clave" class="control-label"></label>
                <input asp-for="t001_usuario.f001_clave" class="form-control" />
                <span asp-validation-for="t001_usuario.f001_clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="t001_usuario.f001_nombres" class="control-label"></label>
                <input asp-for="t001_usuario.f001_nombres" class="form-control" disabled="@Model.IsPatient" />
                <span asp-validation-for="t001_usuario.f001_nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="t001_usuario.f001_apellidos" class="control-label"></label>
                <input asp-for="t001_usuario.f001_apellidos" class="form-control" disabled="@Model.IsPatient" />
                <span asp-validation-for="t001_usuario.f001_apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="t001_usuario.f001_correo_electronico" class="control-label"></label>
                <input asp-for="t001_usuario.f001_correo_electronico" class="form-control" disabled="@Model.IsPatient" />
                <span asp-validation-for="t001_usuario.f001_correo_electronico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="t001_usuario.f001_numero_celular" class="control-label"></label>
                <input asp-for="t001_usuario.f001_numero_celular" class="form-control" disabled="@Model.IsPatient" />
                <span asp-validation-for="t001_usuario.f001_numero_celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="t001_usuario.f001_rowid_empresa_o_persona_natural" class="control-label"></label>
                <select asp-for="t001_usuario.f001_rowid_empresa_o_persona_natural" class="form-control" asp-items="ViewBag.f001_rowid_empresa_o_persona_natural" disabled="@Model.IsPatient"></select>
                <span asp-validation-for="t001_usuario.f001_rowid_empresa_o_persona_natural" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="t001_usuario.f001_rowid_estado" class="control-label"></label>
                <select asp-for="t001_usuario.f001_rowid_estado" class="form-control" asp-items="ViewBag.f001_rowid_estado" disabled="@Model.IsPatient"></select>
                <span asp-validation-for="t001_usuario.f001_rowid_estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="t001_usuario.f001_rowid_perfil" class="control-label"></label>
                <select asp-for="t001_usuario.f001_rowid_perfil" class="form-control" asp-items="ViewBag.f001_rowid_perfil" disabled="@Model.IsPatient"></select>
                <span asp-validation-for="t001_usuario.f001_rowid_perfil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="t001_usuario.f001_rowid_cliente" class="control-label"></label>
                <select asp-for="t001_usuario.f001_rowid_cliente" class="form-control" asp-items="ViewBag.f001_rowid_cliente" disabled="@Model.IsPatient"></select>
                <span asp-validation-for="t001_usuario.f001_rowid_cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-dark" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Editar" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
