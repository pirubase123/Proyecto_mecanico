   <script>

        document.addEventListener('DOMContentLoaded', function () {
            const medicinaButton = document.getElementById('medicinaButton');
            const medicinaDropdown = document.getElementById('medicinaDropdown');

            // Muestra u oculta el menú de Medicina General
            medicinaButton.addEventListener('click', function (event) {
                event.stopPropagation(); // Evita que el evento haga cerrar otros dropdowns
                // Position the dropdown relative to the button
                const buttonRect = medicinaButton.getBoundingClientRect();
                medicinaDropdown.style.position = 'fixed';
                medicinaDropdown.style.top = `${buttonRect.bottom}px`;
                medicinaDropdown.style.left = `${buttonRect.left}px`;
                medicinaDropdown.classList.toggle('hidden');
            });

            // Cierra el menú si se hace clic fuera de él
            document.addEventListener('click', function (event) {
                if (!medicinaButton.contains(event.target) && !medicinaDropdown.contains(event.target)) {
                    medicinaDropdown.classList.add('hidden');
                }
            });
        });
   </script>

